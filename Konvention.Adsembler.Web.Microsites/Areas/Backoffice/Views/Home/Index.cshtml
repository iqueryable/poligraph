@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0">
    <title>The Poli-Graph</title>
    <link rel="icon" href="/images/favicon.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="/areas/backoffice/content/css/adminlte.min.css">
    <link rel="stylesheet" href="/areas/backoffice/content/css/skins/skin-purple.min.css">
    <link rel="stylesheet" href="/areas/backoffice/content/plugins/iCheck/minimal/blue.css">
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="sidebar-mini skin-purple">
    <header class="main-header">
        <a href="/backoffice" class="logo">
            <span class="logo-mini">PG</span>
            <span class="logo-lg">The Poli-Graph</span>
        </a>
        <nav class="navbar navbar-static-top">
            <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
        </nav>
    </header>

    <aside class="main-sidebar">
        <section class="sidebar">
            <ul class="sidebar-menu">
                <li class="header">MAIN NAVIGATION</li>
                <li class="active">
                    <a href="/backoffice">
                        <i class="fa fa-edit"></i> <span>Tell a lie</span>
                    </a>
                </li>
            </ul>
        </section>
    </aside>

    <div class="content-wrapper">
        <section class="content">
            <div id="notifications"></div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Tell a lie</h3>
                        </div>
                        <form class="form-horizontal ajax-form" action="/api/webhooks/incoming/genericjson/poligraph?code=f76099612ad94050b698ebb9747ee9c25349a1ab5e96c7cd8205e1f28756db32" method="POST">
                            <div class="box-body">
                                <div class="callout callout-success" style="display: none;">
                                    <h4>The lie has been told</h4>
                                    <p>Now the rat's outta the sack</p>
                                </div>

                                <div class="form-group">
                                    <label for="" class="col-sm-2 control-label">Source</label>
                                    <div class="col-sm-10">
                                        <input name="source" type="text" class="form-control" placeholder="PolitiFact">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="col-sm-2 control-label">Title</label>
                                    <div class="col-sm-10">
                                        <input name="title" type="text" class="form-control" placeholder="Trump wrongly says U.S. has made others rich while our wealth has 'dissipated'">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="col-sm-2 control-label">Link</label>
                                    <div class="col-sm-10">
                                        <input name="link" type="text" class="form-control" placeholder="http://www.politifact.com/truth-o-meter/statements/2017/jan/20/donald-trump/trump-wrongly-says-us-has-made-others-rich-while-o/">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="" class="col-sm-2 control-label">Date</label>
                                    <div class="col-sm-10">
                                        <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input name="date" type="text" class="form-control" data-inputmask="'mask': 'y/m/d h:s'" data-mask placeholder="yyyy/mm/dd hh:mm">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <label>
                                            <input name="suppress" type="checkbox" value="true" class="minimal"> Don't Broadcast
                                        </label>
                                    </div>
                                </div>
                                <input name="description" type="hidden" value="The Truth-o-Meter says: False | Editor"/>
                            </div>
                            <div class="box-footer">
                                <div class="col-sm-offset-2">
                                    <button type="submit" class="btn btn-success">Tell it</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <footer class="main-footer"></footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="/areas/backoffice/content/plugins/input-mask/jquery.inputmask.js"></script>
    <script src="/areas/backoffice/content/plugins/input-mask/jquery.inputmask.date.extensions.js"></script>
    <script src="/areas/backoffice/content/plugins/input-mask/jquery.inputmask.extensions.js"></script>
    <script src="/areas/backoffice/content/plugins/iCheck/icheck.min.js"></script>
    <script src="/areas/backoffice/content/js/app.min.js"></script>
    <script>
        $(function () {
            $("[data-mask]").inputmask();

            $('input[type="checkbox"].minimal, input[type="radio"].minimal').iCheck({
                checkboxClass: 'icheckbox_minimal-blue',
                radioClass: 'iradio_minimal-blue'
            });

            $('form.ajax-form').on('submit', function(e) {
                event.preventDefault();

                var button = $('button[type=submit]', this).attr('disabled', 'disabled');
                var formData = $(this).serializeArray();
                var data = {};
                for (var i = 0; i < formData.length; i++) {
                    var item = formData[i];
                    data[item.name] = item.value;
                }
                var json = JSON.stringify(data);

                $.ajax({
                    type: 'POST',
                    url: $(this).attr('action'),
                    contentType: 'application/json',
                    data: json
                }).fail(function () {
                    var alert = $('<div class="alert alert-danger alert-dismissible"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button><h4 style="margin-bottom: 0;"><i class="icon fa fa-check"></i> Something went wrong!</h4></div>');
                    $('#notifications').append(alert);
                }).done(function (data) {
                    var alert = $('<div class="alert alert-success alert-dismissible"><button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button><h4 style="margin-bottom: 0;"><i class="icon fa fa-check"></i> The lie has been told!</h4></div>');
                    $('#notifications').append(alert);
                }).always(function () {
                    button.removeAttr('disabled');
                });
            });
        });
    </script>
</body>
</html>